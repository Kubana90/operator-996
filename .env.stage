# Staging Environment Configuration
# operator-996 Platform

# Application
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database
DB_HOST=postgres-stage.operator996.svc.cluster.local
DB_PORT=5432
DB_NAME=operator996_stage
DB_USER=stage_user
DB_PASSWORD=${VAULT_DB_PASSWORD}
DB_SSL=true
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis Cache
REDIS_HOST=redis-stage.operator996.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=${VAULT_REDIS_PASSWORD}
REDIS_DB=0
REDIS_TTL=3600

# Kong Gateway
KONG_ADMIN_URL=https://kong-admin-stage.operator996.internal:8444
KONG_PROXY_URL=https://api-stage.operator996.io
KONG_ADMIN_TOKEN=${VAULT_KONG_TOKEN}

# Observability
GRAFANA_URL=https://grafana-stage.operator996.io
PROMETHEUS_URL=http://prometheus-stage.operator996.svc.cluster.local:9090
JAEGER_ENDPOINT=http://jaeger-collector-stage.operator996.svc.cluster.local:14268/api/traces

# Security
JWT_SECRET=${VAULT_JWT_SECRET}
JWT_EXPIRY=12h
API_RATE_LIMIT=500
CORS_ORIGIN=https://stage.operator996.io

# Vault
VAULT_ADDR=https://vault.operator996.io
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_NAMESPACE=operator996/stage

# Feature Flags
ENABLE_BIOFEEDBACK=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_ROUTES=false
