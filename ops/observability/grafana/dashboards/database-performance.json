{
  "dashboard": {
    "id": null,
    "uid": "operator996-database-performance",
    "title": "operator-996 Database Performance",
    "tags": ["operator996", "postgresql", "timescaledb", "database"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Connections",
        "type": "gauge",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT COUNT(*) as count FROM pg_stat_activity WHERE state = 'active'",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 80, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Database Size",
        "type": "stat",
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT pg_database_size(current_database()) as size",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        }
      },
      {
        "id": 3,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {
          "x": 16,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT ROUND(100 * sum(blks_hit) / nullif(sum(blks_hit) + sum(blks_read), 0), 2) as ratio FROM pg_stat_database WHERE datname = current_database()",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 90, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Query Execution Time",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "rate(pg_stat_statements_seconds_total[5m])",
            "refId": "A",
            "legendFormat": "Query Time"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "title": "Transactions per Second",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "Prometheus",
            "expr": "rate(pg_stat_database_xact_commit{datname=~\"operator996.*\"}[5m])",
            "refId": "A",
            "legendFormat": "Commits"
          },
          {
            "datasource": "Prometheus",
            "expr": "rate(pg_stat_database_xact_rollback{datname=~\"operator996.*\"}[5m])",
            "refId": "B",
            "legendFormat": "Rollbacks"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Table Sizes",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT schemaname || '.' || relname as table_name, pg_size_pretty(pg_total_relation_size(relid)) as total_size, n_live_tup as row_count FROM pg_stat_user_tables ORDER BY pg_total_relation_size(relid) DESC LIMIT 10",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Hypertable Compression",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 16,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT hypertable_name, before_compression_total_bytes, after_compression_total_bytes, ROUND(100 * (1 - after_compression_total_bytes::numeric / before_compression_total_bytes::numeric), 2) as compression_ratio FROM timescaledb_information.compression_settings cs JOIN timescaledb_information.hypertable_compression_stats hcs ON cs.hypertable_name = hcs.hypertable_name WHERE before_compression_total_bytes > 0",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Slow Queries",
        "type": "table",
        "gridPos": {
          "x": 0,
          "y": 24,
          "w": 24,
          "h": 8
        },
        "targets": [
          {
            "datasource": "PostgreSQL",
            "rawSql": "SELECT query, calls, total_exec_time / 1000 as total_time_sec, mean_exec_time / 1000 as mean_time_sec, rows FROM pg_stat_statements ORDER BY total_exec_time DESC LIMIT 10",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
