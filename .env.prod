# Production Environment Configuration
# operator-996 Platform
# ⚠️  ALL SECRETS MUST BE INJECTED FROM VAULT

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=warn

# Database
DB_HOST=postgres-prod.operator996.svc.cluster.local
DB_PORT=5432
DB_NAME=operator996_prod
DB_USER=prod_user
DB_PASSWORD=${VAULT_DB_PASSWORD}
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=true
DB_POOL_MIN=10
DB_POOL_MAX=50

# Redis Cache
REDIS_HOST=redis-prod.operator996.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=${VAULT_REDIS_PASSWORD}
REDIS_DB=0
REDIS_TTL=7200
REDIS_CLUSTER_MODE=true

# Kong Gateway
KONG_ADMIN_URL=https://kong-admin-prod.operator996.internal:8444
KONG_PROXY_URL=https://api.operator996.io
KONG_ADMIN_TOKEN=${VAULT_KONG_TOKEN}
KONG_MTLS_ENABLED=true

# Observability
GRAFANA_URL=https://grafana.operator996.io
PROMETHEUS_URL=http://prometheus-prod.operator996.svc.cluster.local:9090
JAEGER_ENDPOINT=http://jaeger-collector-prod.operator996.svc.cluster.local:14268/api/traces
DATADOG_API_KEY=${VAULT_DATADOG_KEY}

# Security
JWT_SECRET=${VAULT_JWT_SECRET}
JWT_EXPIRY=1h
API_RATE_LIMIT=100
CORS_ORIGIN=https://operator996.io,https://app.operator996.io
HSTS_ENABLED=true
CSP_ENABLED=true

# Vault
VAULT_ADDR=https://vault.operator996.io
VAULT_TOKEN=${VAULT_TOKEN}
VAULT_NAMESPACE=operator996/prod
VAULT_ROLE=operator996-prod

# Feature Flags
ENABLE_BIOFEEDBACK=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_ROUTES=false

# Backup & DR
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
